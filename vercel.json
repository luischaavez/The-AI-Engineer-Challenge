{
  "version": 2,
  "builds": [
    { 
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11"
      }
    },
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/next" 
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "api/app.py"
    },
    { 
      "src": "/(.*)", 
      "dest": "frontend/$1"
    }
  ]
}
